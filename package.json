{
  "name": "todo-devops-monorepo",
  "private": true,
  "type": "module",
  "packageManager": "pnpm@10.15.0",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev:api": "pnpm --filter @todo-and-devops/api dev",
    "dev": "pnpm -r --parallel dev",
    "build": "pnpm --filter @todo-and-devops/shared build && pnpm --filter @todo-and-devops/api build",
    "build:test": "rm -rf apps/api/dist packages/shared/dist && pnpm build && pnpm test:dist",
    "test:dist": "node -e \"console.log('\\n✅ Verificando arquivos de build...'); const fs=require('fs'); ['packages/shared/dist/src/index.js', 'packages/shared/dist/src/index.d.ts', 'apps/api/dist/index.js', 'apps/api/dist/routes.js'].forEach(f => { if(fs.existsSync(f)) { console.log('✅ ' + f + ' existe') } else { console.error('❌ ' + f + ' não encontrado'); process.exit(1); } })\"",
    "docker:test": "docker build -f apps/api/Dockerfile -t todo-api-test .",
    "docker:run": "docker run -p 3000:3000 --rm todo-api-test",
    "test:build": "chmod +x ./scripts/test-build.sh && ./scripts/test-build.sh",
    "typecheck": "pnpm -r typecheck",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "prepare": "husky",
    "commit": "git-cz",
    "test": "pnpm -r test",
    "test:watch": "pnpm -r test:watch",
    "test:coverage": "pnpm -r test:coverage"
  },
  "devDependencies": {
    "@eslint/js": "^9.34.0",
    "@typescript-eslint/eslint-plugin": "^8.41.0",
    "@typescript-eslint/parser": "^8.41.0",
    "lint-staged": "^15.2.9",
    "eslint": "^9.34.0",
    "eslint-config-prettier": "^10.1.8",
    "prettier": "^3.6.2",
    "typescript": "^5.3.0",
    "@commitlint/cli": "^19.0.0",
    "@commitlint/config-conventional": "^19.0.0",
    "husky": "^9.0.0",
    "commitizen": "^4.3.0",
    "cz-conventional-changelog": "^3.3.0",
    "@types/node": "^20.19.0"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  }
}
